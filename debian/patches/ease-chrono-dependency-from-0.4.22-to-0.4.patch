 pem = ">= 1.0, < 1.2"
-chrono = { version = "0.4.22", default-features = false, features = ["alloc", "clock"] }
+chrono = { version = "0.4", default-features = false, features = ["alloc", "clock"] }
 ouroboros = "0.15"
 
